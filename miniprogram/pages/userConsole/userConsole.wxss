/* pages/userConsole/userConsole.wxss */

.list {
  height: auto;
  width: 100%;
  background: #fff;
  padding: 0 40rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  transition: all 300ms ease;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  box-sizing: border-box;
}

.list-item {
  width: 100%;
  padding: 0;
  line-height: 104rpx;
  font-size: 34rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.list-item:first-child {
  border-top: none;
}

.list-item{
  padding-top: 2%;
  padding-bottom: 2%;
}
.profile{
  border-radius: 50%;
  overflow:hidden;
  width: 3em;
  height: 3em;
}
.nickname{
  position: absolute;
  font-size: 1em;
  left: 5em;
  text-align: center;
}

.noticeImg{
  width: 30px; 
  height: 30px;
  margin-top: auto;
  margin-bottom: auto;
}
.notice{
  position:relative;
	padding:5px;
  font-size: 0.8em;
  margin: auto,0,auto,0;
  text-align: center;
  float: left;
}
.tip {
	display:block;
	background:#f00;
	border-radius:50%;
	width:5px;
	height:5px;
	top:1.2em;
	right:37%;
	position:relative;
}

